<div class="page main__page">
  {{> header}}

  <section class="main__page__wrapper">
    {{> sidebar}}

    <section class="main__page__main">
      <header class="main__header">Browse</header>

      <nav class="main__nav">
        <a class="link is-active" href="#">Overview</a>
        <a class="link" href="#">Charts</a>
        <a class="link" href="#">Genres and Moods</a>
        <a class="link" href="#">New Releases</a>
        <a class="link" href="#">Discover</a>
        <a class="link" href="#">More</a>
      </nav>

      <section class="main__content">
        <div class="carousel__wrapper">
          <div class="carousel__header">
            <h2>Trending</h2>
          </div>

          <div class="carousel">
            <ul class="carousel__viewport">
              <li class="carousel__slide" id="carousel__slide1">
                <div class="carousel__snapper">
                  <a href="#carousel__slide4" class="carousel__prev">
                    {{> icon-caret-left}}
                  </a>

                  <div class="carousel__bands">
                    <div class="carousel__bands__unique">
                      <img src="/web/files/?file=sabaton/artist_full_sabaton_4.jpg" alt="" loading="lazy" />

                      <div class="carousel__bands__info">
                        <span class="carousel__bands__info__band">Sabaton</span>
                        <span class="carousel__bands__info__album">The Art of War</span>
                      </div>

                      <div class="carousel__bands__actions">
                        {{> icon-maximize}}
                      </div>
                    </div>
                  </div>

                  <a href="#carousel__slide2" class="carousel__next">
                    {{> icon-caret-right}}
                  </a>
                </div>
              </li>

              <li class="carousel__slide" id="carousel__slide2">
                <div class="carousel__snapper">
                  <a href="#carousel__slide1" class="carousel__prev">
                    {{> icon-caret-left}}
                  </a>

                  <div class="carousel__bands">
                    <div class="carousel__bands__unique">
                      <img src="/web/files/?file=korpiklaani/artist_full_korpiklaani_2.jpg" alt="" loading="lazy" />

                      <div class="carousel__bands__info">
                        <span class="carousel__bands__info__band">Korpiklaani</span>
                        <span class="carousel__bands__info__album"></span>
                      </div>

                      <div class="carousel__bands__actions">
                        {{> icon-maximize}}
                      </div>
                    </div>
                  </div>

                  <a href="#carousel__slide3" class="carousel__next">
                    {{> icon-caret-right}}
                  </a>
                </div>
              </li>

              <li class="carousel__slide" id="carousel__slide3">
                <div class="carousel__snapper">
                  <a href="#carousel__slide2" class="carousel__prev">
                    {{> icon-caret-left}}
                  </a>

                  <div class="carousel__bands">
                    <div class="carousel__bands__unique">
                      <img src="/web/files/?file=black-sabbath/artist_full_black-sabbath_1.jpg" alt="" loading="lazy" />

                      <div class="carousel__bands__info">
                        <span class="carousel__bands__info__band">Black Sabbath</span>
                        <span class="carousel__bands__info__album"></span>
                      </div>

                      <div class="carousel__bands__actions">
                        {{> icon-maximize}}
                      </div>
                    </div>
                  </div>

                  <a href="#carousel__slide4" class="carousel__next">
                    {{> icon-caret-right}}
                  </a>
                </div>
              </li>

              <li class="carousel__slide" id="carousel__slide4">
                <div class="carousel__snapper">
                  <a href="#carousel__slide3" class="carousel__prev">
                    {{> icon-caret-left}}
                  </a>

                  <div class="carousel__bands">
                    <div class="carousel__bands__unique">
                      <img src="/imgs/Sabaton-3.png" alt="" loading="lazy" />

                      <div class="carousel__bands__info">
                        <span class="carousel__bands__info__band">Sabaton</span>
                        <span class="carousel__bands__info__album">The Art of War</span>
                      </div>

                      <div class="carousel__bands__actions">
                        {{> icon-maximize}}
                      </div>
                    </div>
                  </div>

                  <a href="#carousel__slide1" class="carousel__next">
                    {{> icon-caret-right}}
                  </a>
                </div>
              </li>
            </ul>

            <aside class="carousel__navigation">
              <ul class="carousel__navigation__list">
                <li class="carousel__navigation__list__item">
                  <a href="#carousel__slide1" class="carousel__navigation__button"></a>
                </li>
                <li class="carousel__navigation__list__item">
                  <a href="#carousel__slide2" class="carousel__navigation__button"></a>
                </li>
                <li class="carousel__navigation__list__item">
                  <a href="#carousel__slide3" class="carousel__navigation__button"></a>
                </li>
                <li class="carousel__navigation__list__item">
                  <a href="#carousel__slide4" class="carousel__navigation__button"></a>
                </li>
              </ul>
            </aside>
          </div>
        </div>

        <div class="bands">
          <div class="bands__header">
            <h2>Bands</h2>
          </div>

          <ul class="band__list">
            {{#each artists}}
            <li class="band__list__item" id={{id}} onclick="OnClickBand(this.id)"
              style="background-image: url(/web/files/?file={{profile_img}});">
              <div class="band__list__item__info">
                <span class="band__name">{{name}}</span>
                <span class="band__genre">{{genre}}</span>
              </div>
            </li>
            {{/each}}
          </ul>
        </div>
      </section>
    </section>
  </section>

  {{> current-track}}
</div>

{{> artist-modal}}