<div>
  {{> header}}

  <section class="page">
    {{> sidebar}}

    <section class="main">
      <header class="main__header">Browse</header>

      <nav class="main__nav">
        <a class="link is-active" href="#">Overview</a>
        <a class="link" href="#">Charts</a>
        <a class="link" href="#">Genres and Moods</a>
        <a class="link" href="#">New Releases</a>
        <a class="link" href="#">Discover</a>
        <a class="link" href="#">More</a>
      </nav>

      <section class="main__content">
        <div class="bands">
          <h2>Bands</h2>
          <ul class="band__list">
            {{#each artists}}
            <li class="band__list__item" id={{id}} onclick="OnClickBand(this.id)"
              style="background-image: linear-gradient(rgba(0, 0, 0, 0.55), rgba(0, 0, 0, 0.55)), url(/web/band/{{id}}/cover); opacity: 0.8">
              <span class="band__name">{{name}}</span>
              <span class="band__genre">{{genre}}</span>
            </li>
            {{/each}}
          </ul>
        </div>
      </section>
    </section>
  </section>

  {{> current-track}}
</div>