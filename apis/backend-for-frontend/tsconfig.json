{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": "./src",
    "paths": {
      "@channels/*": ["channels/*"],
      "@config/*": ["config/*"],
      "@constants/*": ["constants/*"],
      "@entities/*": ["entities/*"],
      "@handlers/*": ["handlers/*"],
      "@integrations/*": ["integrations/*"],
      "@providers/*": ["providers/*"],
      "@utils/*": ["utils/*"],
    },
    "strict": true,
    "allowJs": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["node_modules"],
}