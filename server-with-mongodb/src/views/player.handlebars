<div class="music-box">
  <div class="album">
    <div class="photo"><img></div>
    <div class="infos">
      <div class="song"><span>{{music}}</span><small>{{album}}</small></div>
    </div>
  </div>

  <div class="dashboard">
    <div class="list">
      <div class="list-btn"><span></span></div>
    </div>

    <div class="player">
      <div class="time"><small class="current">0:00</small> / <small class="duration">{{duration}}</small></div>
      <div class="time-rail">
        <div class="thumb"></div>
        <div class="track"></div>        
      </div>
    </div>

    <div class="action-button">
        <a class="random"><i class="fa fa-random"></i></a>
        <a class="prev"><i class="fa fa-step-backward"></i></a>
        <a class="play-pause"><i class="fa fa-play"></i></a>
        <a class="next"><i class="fa fa-step-forward"></i></a>
        <a class="stop"><i class="fa fa-stop"></i></a>
        <a class="repeat"><i class="fa fa-repeat"></i></a>
        <a class="volume"><i class="fa fa-volume-up"></i></a>
    </div>

    <audio id="audio-tag">
      <source src="/audio/{{id}}">
    </audio>
  </div>

