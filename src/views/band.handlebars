<div class="wrapper">
  <aside class="sidebar">
    <ul class="sidebar__main-links">
      <li>Browse</li>
      <li>Radio</li>
    </ul>
    <ul class="sidebar__music">
      <h2 class="sidebar__header">Your Music</h2>
      <li>Your Daily Mix</li>
      <li>Songs</li>
      <li>Albums</li>
      <li>Artists</li>
      <li>Stations</li>
      <li>Local Files</li>
    </ul>
    <ul class="sidebar__playlists">
      <h2 class="sidebar__header">Playlists</h2>
      <li>Liked from Radio</li>
      <li>Indie Pop</li>
      <li>Roadtrip</li>
      <li>Release Radar</li>
      <li>Focus</li>
      <li>Piano Mood</li>
      <li>Your Summer Rewind</li>
      <li>Inspire</li>
      <li>Alternative Faves</li>
    </ul>
  </aside>

  <main>
    <header class="main__header">
      <h1>Browse</h1>
    </header>

    <nav class="main__nav"><a class="link is-active" href="#">Overview</a><a class="link" href="#">Charts</a><a class="link" href="#">Genres and Moods</a><a class="link" href="#">New Releases</a><a class="link" href="#">Discover</a><a class="link" href="#">More</a></nav>

    <section class="main__playlists">
      <h2>Albums</h2>
      <ul class="music__list">
        {{#each artist.albums}}
          <li class="music__list-item" id={{id}} onclick="onclickAlbum(this.id)" ><span class="song__title">{{name}}</span><span class="song__creator">{{year}}</span></li>
        {{/each}}
      </ul>
    </section>
  </main>

  <aside class="activity">
    <h2>Friend Activity</h2>
    <button class="button">Find Friends</button>
  </aside>
</div>
